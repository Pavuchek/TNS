<UserControl x:Class="CRM.Pages.Subscribers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="500">
    <Grid Initialized="Grid_Initialized">
        <DataGrid x:Name="listSubscribers" IsReadOnly="True" Height="300" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioActive" GroupName="Active" Content="Активные" Width="80" Height="20" HorizontalAlignment="Left" Margin="0,300,0,0"/>
        <RadioButton x:Name="radioNoActive" GroupName="Active" Content="Неактивные" Width="100" Height="20" HorizontalAlignment="Left" Margin="100,300,0,0"/>
    </Grid>
</UserControl>
